eval "$(univention-config-registry shell)"

if [ "$auth_faillog" = "yes" -o "$auth_faillog" = "enabled" -o "$auth_faillog" = "true" -o "$auth_faillog" = "1" ]; then

	attempts=$(pam_tally --user "$USER" | awk '{print $NF}')
	max_attempts=5
	if [ -n "$auth_faillog_limit" ]; then
		max_attempts="$auth_faillog_limit"
	fi
	
	if [ "$attempts" -gt "$max_attempts" ]; then
		# max attempts reached

		if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
			binddn="cn=admin,$ldap_base"
			bindpw="/etc/ldap.secret"
		else
			binddn="$ldap_hostdn"
			bindpw="/etc/machine.secret"
		fi

		user_dn=$(ldapsearch -x -D "$binddn" -w "$(cat $bindpw)" "(&(uid=$USER)(objectClass=shadowAccount))" -LLL dn | ldapsearch-wrapper | ldapsearch-decode64 |  sed -ne 's|dn: ||p')

		if [ -z "$user_dn" ]; then
			echo "E: ldap dn for $USER not found"
			exit 1
		fi

		univention-directory-manager users/user modify --binddn "$binddn" --bindpwd "$(cat $bindpw)" --logfile /dev/null --dn "$user_dn" --set locked=all

		exit $?
	else
		# max attempts not reached
		exit 0
	fi
else
	# pam_tally is disabled
	exit 0
fi

